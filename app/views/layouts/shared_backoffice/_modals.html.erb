<div class="col-md-12">
  <div id="modal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <%= yield :modal_lg_content %>
        </div>
    </div>
  </div>
  <div class="modal fade" id="confirm_delete_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
          <div class="modal-content">
              <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <h4 class="modal-title" id="myModalLabel">Confirmação</h4>
              </div>
              <div class="modal-body">
                <%= t('messages.confirm_delete') %>
              </div>
              <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('buttons.cancel') %></button>
                  <%= link_to t('buttons.destroy'), "/backoffice/gyms/pony", method: :delete, :class => 'btn btn-danger confirm-delete-button', remote: true %>
              </div>
          </div>
      </div>
  </div>
</div>
