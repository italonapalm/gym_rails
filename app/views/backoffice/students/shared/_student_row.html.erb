<th scope="row"><%= student.id %></th>
<td><%= student.full_name %></td>
<td>
  <div class="text-right">
    <%= link_to edit_backoffice_student_path(student), { class: 'btn btn-info btn-addon btn-xs', 'data-toggle': "modal", 'data-target': ".bs-example-modal-lg", remote: true } do %>
      <i class="fa fa-edit"></i><%= I18n.t('buttons.edit') %>
    <% end %>

    <%= link_to '#', class: 'btn btn-danger btn-xs btn-addon call-confirm-delete', :data => { :id => student.id }  do %>
      <i class="fa fa-trash"></i><%= I18n.t('buttons.destroy') %>
    <% end %>

  </div>
</td>
</div>
