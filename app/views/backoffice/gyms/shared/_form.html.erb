<%= simple_form_for [:backoffice, @gym], remote: true, html: { multipart: true, novalidate: false } do |f| %>
    <div class="modal-body">
      <%= f.input :name, input_html: { class: 'form-control' }, required: true, autofocus: true %>
    </div>
    <div class="modal-footer">
      <%= button_tag type: :reset, class: "btn btn-default", "data-dismiss": "modal" do %>
        <%= I18n.t 'buttons.close' %>
      <% end %>
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
<% end %>
