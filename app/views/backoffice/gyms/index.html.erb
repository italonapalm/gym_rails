
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-white">
      <div class="panel-heading clearfix">
          <h4 class="panel-title">Cadastro de Academias</h4>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>Id</th>
                    <th>Name</th>
                  </tr>
                </thead>
                <tbody>
                  <% @gyms.each do |gym| %>
                    <tr>
                      <th scope="row"><%= gym.id %></th>
                      <td><%= gym.name %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>

          <div class="col-md-12">
            <%= link_to '#', { class: 'btn btn-success', 'data-toggle': "modal", 'data-target': ".bs-example-modal-lg" } do %>
              New Gym Using Ajax
            <% end %>

            <%= render partial: 'backoffice/gyms/form_modal' %>

          </div>
        </div>

      </div>
    </div>
  </div>


</div>

