
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-white">
      <div class="panel-heading clearfix">
          <h4 class="panel-title">Cadastro de Academias</h4>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <%= link_to new_backoffice_gym_path, { class: 'btn btn-success btn-addon m-b-sm btn-sm', 'data-toggle': "modal", 'data-target': ".bs-example-modal-lg", remote: true } do %>
              <i class="fa fa-plus"></i>New Gym

            <% end %>


            <div id="modal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
              <div class="modal-dialog modal-lg">
                  <div class="modal-content">
                      <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                          <h4 class="modal-title" id="myLargeModalLabel">Academia</h4>
                      </div>
                      <div id="form_modal" class="modal-body">

                        <%= render partial: 'backoffice/gyms/shared/form_modal' %>
                      </div>
                  </div>
              </div>
            </div>


          </div>
          <div class="col-md-12">
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th class="text-right">Actions</th>
                  </tr>
                </thead>
                <tbody id="gyms-table">
                  <% @gyms.each do |gym| %>
                    <tr id="gym-row-<%= gym.id %>">
                      <%= render partial: 'backoffice/gyms/shared/gym_row', locals: {gym: gym} %>
                    </tr>
                  <% end %>

                </tbody>
              </table>
            </div>
          </div>


        </div>

      </div>
    </div>
  </div>


</div>

