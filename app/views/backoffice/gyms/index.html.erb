<% content_for :javascripts do %>
  <%= javascript_include_tag 'backoffice/gyms' %>
<% end %>

<div class="page-title">
    <h3><%= t 'labels.register', model: @gyms.model_name.human %></h3>
    <div class="page-breadcrumb">
        <ol class="breadcrumb">
            <li><a href="index.html">Home</a></li>
            <li><a href="#">Layouts</a></li>
            <li class="active">Blank Page</li>
        </ol>
    </div>
</div>
<div id="main-wrapper">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-white">
        <div class="panel-heading clearfix">
          <h4 class="panel-title">Pesquisar</h4>
        </div>
        <div class="panel-body">
          <%= form_tag backoffice_gyms_path, class: "form-inline", method: :get, remote: true do %>
            <div class="form-group">
              <div class="input-group">
                <%= text_field_tag :query, params[:query], class: "form-control search-input", placeholder: "Pesquisar por...", id: "gym_search" %>
                <span class="input-group-btn">
                    <%= submit_tag "Search", class: "btn btn-primary", remote: true %>
                </span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-white">
        <div class="panel-heading clearfix">
            <h4 class="panel-title"><%= t('messages.listing', model: @gyms.model_name.human(count: 2)) %></h4>
            <%= link_to new_backoffice_gym_path, { class: 'pull-right btn btn-success btn-addon m-b-sm btn-sm', 'data-toggle': "modal", 'data-target': ".bs-example-modal-lg", remote: true } do %>
                <i class="fa fa-plus"></i><%= t('buttons.new') %>
            <% end %>
        </div>
        <div class="panel-body">
          <div class="row">
            <% content_for :modal_lg_content do %>
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myLargeModalLabel"><%= Gym.model_name.human %></h4>
              </div>
              <div id="gym_form">
                <%= render partial: 'backoffice/gyms/shared/form' %>
              </div>
            <% end %>
            <div class="col-md-12">
              <div class="table-responsive">
                <table class="table table-striped table-hover">
                  <thead>
                    <tr>
                      <th><%= Gym.human_attribute_name("gym.id") %></th>
                      <th><%= Gym.human_attribute_name("gym.name") %></th>
                      <th class="text-right"><%= t 'labels.action' %></th>
                    </tr>
                  </thead>
                  <tbody id="gyms-table">
                    <% if @gyms.blank? %>
                      <tr>
                        <td>Não há registros</td>
                      </tr>
                    <% else %>
                      <%= render partial: 'backoffice/gyms/shared/gym_rows', locals: {gyms: @gyms} %>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 text-center">
              <%= paginate @gyms, :theme => 'twitter-bootstrap-3',
                  :pagination_class => "pagination-small pagination-centered" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
